<script type="text/javascript">
require([		
	"dojo/dom-style",
	"dojo/query",
	"dijit/registry",
	"dojo/on",
   	"cds/ready!"
], function(domStyle, query, registry, on) {
	on(registry.byId('cancelButton'), 'click', function() {
		window.history.back();
	});
});
</script>

<div>

<form action="#springUrl($action)" method="post">

#if($metadataForm.id)
<input type="hidden" name="id" value="$metadataForm.id">
#end

<table class="cds-table">
	<thead>
		<th>
			<td colspan="2">$title</td>
		</th>
	</thead>
	<tbody>
		<tr>
			<td><label for="theme">Thema</label></td>
			<td>
				<select data-dojo-type="dijit/form/FilteringSelect" name="themeId">
					<option value=""></option>
					#foreach($theme in $themes)
					<option value="$theme.id" #if($theme.id == $metadataForm.themeId)selected#end>#e($theme.naam)</option>
					#end
				</select>
			</td>
		</tr>
		<tr>
			<td><label for="documentType">Type</label></td>
			<td>
				<input data-dojo-type="dijit/form/RadioButton" type="radio" name="documentType" value="DATASET" #if($metadataForm.documentType == 'DATASET')checked#end>Dataset</input>
				<input data-dojo-type="dijit/form/RadioButton" type="radio" name="documentType" value="SERVICE" #if($metadataForm.documentType == 'SERVICE')checked#end>Service</input>
			</td>
		</tr>
		<tr>
			<td><label for="documentName">Naam</label></td>
			<td>
				<input type="text" name="documentName" #if($!metadataForm.documentName)readonly disabled#end value="#e($!metadataForm.documentName)"></input>
			</td>
		</tr>
		<tr>
			<td><label for="documentContent">Inhoud</label></td>
			<td>
				<textarea cols="80" rows="25" name="documentContent">#e($!metadataForm.documentContent)</textarea>
			</td>
		</tr>		
	</tbody>
	<tfoot>
		<tr>
			<td colspan="2">
				<button data-dojo-type="dijit/form/Button" type="submit">Opslaan</button>
				<button id="cancelButton" data-dojo-type="dijit/form/Button" type="button">Annuleren</button>
			</td>
		</tr>
	</tfoot>
</table>

</form>

</div>