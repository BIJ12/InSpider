<SQLFeatureStore xmlns="http://www.deegree.org/datasource/feature/sql" 
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
  configVersion="3.2.0" 
  xmlns:app="http://www.ipo.nl/InSpider"
  xsi:schemaLocation="http://www.deegree.org/datasource/feature/sql http://schemas.deegree.org/datasource/feature/sql/3.2.0/sql.xsd">

  <JDBCConnId>conNZ</JDBCConnId>

  <FeatureTypeMapping table="bron.hazard_area" name="app:HazardArea_NL">
    <FIDMapping>
        <Column name="id" />
    </FIDMapping>
      
    <Primitive path="app:inspire_id_dataset_code" mapping="inspire_id_dataset_code" />
    <Primitive path="app:inspire_id_local_id" mapping="inspire_id_local_id" />
    <Primitive path="app:hazard_area_id" mapping="hazard_area_id" />
    <Primitive path="app:determination_method" mapping="determination_method" />
    <Primitive path="app:type_of_hazard_hazard_category" mapping="type_of_hazard_hazard_category" />
    <Primitive path="app:likelihood_of_occurrence_assessment_method_name" mapping="likelihood_of_occurrence_assement_method_name" />
    <Primitive path="app:likelihood_of_occurrence_assessment_method_link" mapping="likelihood_of_occurrence_assement_method_link" />
    <Primitive path="app:likelihood_of_occurrence_qualitative_likelihood" mapping="likelihood_of_occurrence_qualitative_likelihood" />
    <Primitive path="app:likelihood_of_occurrence_quantitative_likelihood_probability" mapping="likelihood_of_occurrence_quantitative_likelihood_probability" />
    <Primitive path="app:likelihood_of_occurrence_quantitative_likelihood_return_period" mapping="likelihood_of_occurrence_quantitative_likelihood_return_period" />
    <Primitive path="app:likelihood_of_occurrence_assement_method_link" mapping="likelihood_of_occurrence_assement_method_link" />
    
    <Geometry path="app:geometry" mapping="geometry">
      <StorageCRS srid="28992">EPSG:28992</StorageCRS>
    </Geometry>
    
  </FeatureTypeMapping>

  
</SQLFeatureStore>